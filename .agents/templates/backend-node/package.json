        "dotenv": "^16.4.7",
        "express": "^5.0.0",
        "helmet": "^8.0.0",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.10.0",
        "eslint": "^9.17.0",
        "prettier": "^3.4.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.0"
    }
}