# LMAgent Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# PROJECT
# ============================================
PROJECT_NAME=lmagent
ENVIRONMENT=development  # development, staging, production

# ============================================
# LLM PROVIDERS
# ============================================

# OpenAI
OPENAI_API_KEY=sk-your-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Google (Gemini)
GOOGLE_API_KEY=your-google-key-here

# Groq
GROQ_API_KEY=gsk_your-key-here

# OpenRouter (fallback)
OPENROUTER_API_KEY=sk-or-your-key-here

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/lmagent

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# GITHUB (for issue resolution)
# ============================================
GITHUB_TOKEN=ghp_your-token-here

# ============================================
# N8N (for automations)
# ============================================
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=your-n8n-api-key

# ============================================
# OBSERVABILITY
# ============================================

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json, text

# Cost tracking
COST_ALERT_THRESHOLD=0.80  # Alert at 80% of limit
COST_LIMIT_PER_DAY=50.00   # USD

# ============================================
# SECURITY
# ============================================

# API authentication
API_SECRET_KEY=your-secret-key-change-in-production

# Sandbox
SANDBOX_ENABLED=true
SANDBOX_DOCKER_IMAGE=lmagent/sandbox:latest
SANDBOX_MAX_MEMORY=256m
SANDBOX_MAX_CPU=0.5
SANDBOX_TIMEOUT=300

# ============================================
# OPTIONAL INTEGRATIONS
# ============================================

# Jira
# JIRA_URL=https://your-org.atlassian.net
# JIRA_API_TOKEN=your-jira-token
# JIRA_EMAIL=your-email@example.com

# Slack
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Sentry (error tracking)
# SENTRY_DSN=https://xxx@sentry.io/xxx
